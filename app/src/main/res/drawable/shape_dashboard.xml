<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#000"/> <!-- Color de la sombra con transparencia -->
            <corners android:radius="30dp"/> <!-- Ajusta el radio de las esquinas si es necesario -->
        </shape>
    </item>

    <!-- Fondo -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Color de fondo -->
            <corners android:radius="30dp"/> <!-- Ajusta el radio de las esquinas si es necesario -->
        </shape>
    </item>
</layer-list>
